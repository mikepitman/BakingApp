<LinearLayout
    android:id="@+id/ingredient_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/Snow">

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="@dimen/widget_ingredient_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/widget_margin"

        android:contentDescription="@string/appwidget_text"
        android:textColor="@color/Navy"
        android:textSize="@dimen/widget_textsize_big"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="@dimen/widget_quantity_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/widget_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Navy"
            android:textSize="@dimen/widget_textsize_small"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/ingredient_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Navy"
            android:textSize="@dimen/widget_textsize_small"
            android:textStyle="italic"/>
    </LinearLayout>

</LinearLayout>

